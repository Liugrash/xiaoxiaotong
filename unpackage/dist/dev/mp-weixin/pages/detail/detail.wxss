  font-size: 60rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
}
.root .top .mesagae {
  font-size: 50rpx;
}
.root .message-detail {
  position: fixed;
  top: 320rpx;
  left: 40rpx;
  right: 40rpx;
  height: 380rpx;
  border-radius: 20rpx;
